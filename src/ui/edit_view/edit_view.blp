using Gtk 4.0;
using Adw 1;

template PaperEditView : Box {

  orientation: vertical;

  styles ["text-area"]

  ScrolledWindow scrolled_window {

    hexpand: true;
    vexpand: true;

    .GtkMarkdownView text_view {

      width-request: 960;
      halign: center;
      hexpand: 1;
      vexpand: 1;
      tab-width: 4;
      auto-indent: true;
      wrap-mode: word-char;
      top-margin: 64;
      bottom-margin: 64;
      show-gutter: true;

      styles ["markdown-view"]
    }
  }

  .PaperToolbar toolbar {
    hexpand: true;
    vexpand: false;
  }
}