<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PaperPreferencesWindow" parent="AdwPreferencesWindow">
    <property name="default-width">480</property>
    <property name="default-height">300</property>
    <property name="modal">1</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Note Font</property>
                <property name="subtitle" translatable="yes">The font notes will be displayed in</property>
                <child>
                  <object class="GtkFontButton" id="font_button">
                    <property name="title" translatable="yes">Pick a font for displaying the notes' content</property>
                    <property name="use_size">0</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
