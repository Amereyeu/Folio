<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <requires lib="gtksourceview" version="5.0"/>
  <template class="PaperWindow" parent="AdwApplicationWindow">
    <property name="default-width">720</property>
    <property name="default-height">512</property>
    <style>
      <class name="transparent"/>
    </style>
    <child>
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="AdwLeaflet" id="leaflet">
            <child>
              <object class="AdwLeafletPage" id="sidebar">
                <property name="navigatable">0</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="hexpand">0</property>
                    <property name="vexpand">1</property>
                    <child>
                      <object class="PaperNotebooksBar" id="notebooks_bar"/>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <style>
                          <class name="notebook-sidebar"/>
                        </style>
                        <property name="hexpand">1</property>
                        <property name="vexpand">1</property>
                        <property name="width-request">200</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="AdwHeaderBar">
                            <property name="show-end-title-buttons" bind-source="leaflet" bind-property="folded" bind-flags="sync-create"/>
                            <child type="title">
                              <object class="AdwWindowTitle" id="notebook_title">
                              </object>
                            </child>
                            <child type="start">
                              <object class="GtkButton" id="button_edit_notebook">
                                <property name="icon-name">document-edit-symbolic</property>
                                <property name="action_name">app.edit-notebook</property>
                                <property name="tooltip_text">Edit Notebook</property>
                              </object>
                            </child>
                            <child type="end">
                              <object class="GtkButton" id="button_create_note">
                                <property name="icon-name">list-add-symbolic</property>
                                <property name="action_name">app.new-note</property>
                                <property name="tooltip_text">New Note</property>
                              </object>
                            </child>
                            <child type="end">
                              <object class="GtkButton" id="button_empty_trash">
                                <property name="icon-name">empty-trash-symbolic</property>
                                <property name="action_name">app.empty-trash</property>
                                <property name="tooltip_text">Empty Trash</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSearchBar" id="notes_search_bar">
                            <child>
                              <object class="GtkSearchEntry" id="notes_search_entry">
                              </object>
                            </child>
                            <style>
                              <class name="inline"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkScrolledWindow">
                            <property name="hexpand">1</property>
                            <property name="vexpand">1</property>
                            <property name="vscrollbar_policy">external</property>
                            <property name="hscrollbar_policy">never</property>
                              <child>
                                <object class="GtkListView" id="notebook_notes_list">
                                </object>
                              </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwLeafletPage" id="edit_view">
                <property name="navigatable">1</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="hexpand">1</property>
                    <property name="vexpand">1</property>
                    <property name="orientation">vertical</property>
                    <property name="width-request">390</property>
                    <child>
                      <object class="AdwHeaderBar">
                        <property name="show-start-title-buttons" bind-source="leaflet" bind-property="folded" bind-flags="sync-create"/>
                        <property name="hexpand">1</property>
                        <property name="vexpand">0</property>
                        <property name="visible">1</property>
                        <property name="valign">start</property>
                        <child type="title">
                          <object class="AdwWindowTitle" id="note_title">
                          </object>
                        </child>
                        <child type="start">
                          <object class="GtkToggleButton" id="button_toggle_sidebar">
                            <property name="icon-name">sidebar-show-symbolic</property>
                            <property name="tooltip_text">Toggle sidebar</property>
                            <property name="active">1</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow" id="text_view_scroll">
                        <property name="hexpand">1</property>
                        <property name="vexpand">1</property>
                        <property name="visible">0</property>
                        <child>
                          <object class="GtkMarkdownView" id="text_view">
                            <property name="tab-width">4</property>
                            <property name="auto-indent">true</property>
                            <property name="wrap-mode">word-char</property>
                            <property name="bottom-margin">18</property>
                            <property name="left-margin">18</property>
                            <property name="right-margin">18</property>
                            <property name="top-margin">18</property>
                            <property name="hexpand">1</property>
                            <property name="vexpand">1</property>
                          </object>
                        </child>
                        <style>
                          <class name="text-area"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="toolbar">
                        <property name="orientation">horizontal</property>
                        <property name="hexpand">1</property>
                        <child>
                          <object class="GtkButton">
                            <property name="icon-name">format-text-bold-symbolic</property>
                            <property name="tooltip_text">Bold</property>
                            <property name="action_name">app.format-bold</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="icon-name">format-text-italic-symbolic</property>
                            <property name="tooltip_text">Italic</property>
                            <property name="action_name">app.format-italic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="icon-name">format-text-strikethrough-symbolic</property>
                            <property name="tooltip_text">Strikethrough</property>
                            <property name="action_name">app.format-strikethough</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="icon-name">format-text-highlight-symbolic</property>
                            <property name="tooltip_text">Highlight</property>
                            <property name="action_name">app.format-highlight</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <property name="hexpand">1</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="icon-name">dialog-information-symbolic</property>
                            <property name="tooltip_text">Markdown cheatsheet</property>
                            <property name="action_name">app.markdown-cheatsheet</property>
                          </object>
                        </child>
                        <style>
                          <class name="toolbar"/>
                          <class name="bottom-toolbar"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="text_view_empty">
                        <property name="hexpand">1</property>
                        <property name="vexpand">1</property>
                        <property name="visible">1</property>
                        <property name="orientation">vertical</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <style>
                          <class name="welcome-screen"/>
                        </style>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Get started writing</property>
                            <style>
                              <class name="large-title"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <property name="margin-bottom">18</property>
                            <property name="margin-top">18</property>
                            <property name="orientation">vertical</property>
                            <style>
                              <class name="linked"/>
                            </style>
                            <child>
                              <object class="GtkButton">
                                <property name="action_name">app.new-notebook</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-bottom">8</property>
                                    <property name="margin-top">8</property>
                                    <property name="margin-start">10</property>
                                    <property name="margin-end">10</property>
                                    <property name="orientation">horizontal</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="margin-end">18</property>
                                        <property name="icon_name">document-new-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="halign">start</property>
                                            <property name="label">Create Notebook</property>
                                            <style>
                                              <class name="heading"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="halign">start</property>
                                            <property name="label">Create a new notebook</property>
                                            <style>
                                              <class name="caption"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton">
                                <property name="action_name">app.new-note</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-bottom">8</property>
                                    <property name="margin-top">8</property>
                                    <property name="margin-start">10</property>
                                    <property name="margin-end">10</property>
                                    <property name="orientation">horizontal</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="margin-end">18</property>
                                        <property name="icon_name">document-new-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="halign">start</property>
                                            <property name="label">Start Writing</property>
                                            <style>
                                              <class name="heading"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="halign">start</property>
                                            <property name="label">Create a new note</property>
                                            <style>
                                              <class name="caption"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <style>
                      <class name="text-area"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
