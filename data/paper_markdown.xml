<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="paper" name="Paper" version="1.0">
  <author>Zagura</author>
  <_description>The style scheme for paper</_description>

  <color name="hyperlink"                   value="#4ba0f3"/>
  <color name="hyperlink_label"             value="#0c3eaa"/>

  <color name="escape"                      value="#7bb972"/>

  <color name="quote"                       value="#0ee463"/>
  <color name="literal"                     value="#074228"/>

  <color name="highlight"                   value="#9cffc4"/>


	<style name="markdown:backslash-escape"   foreground="escape" bold="true"/>

	<style name="markdown:blockquote-marker"  foreground="quote" background="quote" scale="0.5"/>
	<style name="markdownpp:blockquote"       foreground="literal"/>

	<style name="markdown:horizontal-rule"    foreground="#rgba(0,0,0,0.2)"/>
	<style name="markdown:list-marker"        foreground="#rgba(0,0,0,0.3)"/>
	<style name="markdown:image-marker"       foreground="#rgba(0,0,0,0.3)" bold="true"/>

	<style name="markdown:attribute-value"    foreground="literal"/>

	<style name="markdown:code-block"         foreground="literal"/>
	<style name="markdown:code-span"          foreground="literal" background="#rgba(0,0,0,0.05)"/>

	<style name="markdown:label"              foreground="hyperlink_label"/>
	<style name="markdown:link-text"          foreground="hyperlink_label"/>
	<style name="markdown:url"                foreground="hyperlink" scale="0.7"/>

  <style name="markdown:emphasis"           italic="true"/>
  <style name="markdown:strong-emphasis"    bold="true"/>
  <style name="markdownpp:strikethrough"    strikethrough="true"/>
  <style name="markdownpp:highlight"        background="highlight"/>

  <style
    name="markdownpp:marker"
    foreground="#rgba(0,0,0,0.3)"
    strikethrough="false"
    bold="false"
    scale="0.7"/>

  <style
    name="markdownpp:long_marker"
    foreground="#rgba(0,0,0,0.3)"
    strikethrough="false"
    bold="false"
    scale="0.5"/>

  <!-- Heading styles -->
  <style name="markdownpp:h1"               bold="true" scale="3.2"/>
  <style name="markdownpp:h2"               bold="true" scale="2.6"/>
  <style name="markdownpp:h3"               bold="true" scale="2.1"/>
  <style name="markdownpp:h4"               bold="true" scale="1.5"/>
  <style name="markdownpp:h5"               bold="true" scale="1.2"/>
  <style name="markdownpp:h6"               bold="true"/>

  <style name="markdownpp:heading-hash"     foreground="#rgba(0,0,0,0.2)" bold="false" scale="0.4"/>
</style-scheme>

