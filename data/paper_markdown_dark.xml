<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="paper-dark" name="Paper dark" version="1.0">
  <author>Zagura</author>
  <_description>The style scheme for paper</_description>

  <metadata>
    <property name="variant">dark</property>
    <property name="light-variant">paper</property>
  </metadata>

  <color name="hyperlink"                   value="#4ba0f3"/>

  <color name="escape"                      value="#7bb972"/>

  <color name="quote"                       value="#11af50"/>
  <color name="literal"                     value="#87fcc8"/>

	<style name="markdown:backslash-escape"   foreground="escape" bold="true"/>

	<style name="markdown:blockquote-marker"  foreground="quote" background="quote" scale="0.5"/>
	<style name="markdownpp:blockquote"       foreground="literal"/>

	<style name="markdown:horizontal-rule"    foreground="#rgba(255,255,255,0.2)"/>
	<style name="markdown:list-marker"        foreground="#rgba(255,255,255,0.3)"/>
	<style name="markdown:image-marker"       foreground="#rgba(255,255,255,0.3)" bold="true"/>

	<style name="markdown:attribute-value"    foreground="literal"/>

	<style name="markdown:code-block"         foreground="literal"/>
	<style name="markdown:code-span"          foreground="literal" background="#rgba(200,255,220,0.04)"/>

	<style name="markdown:label"              foreground="hyperlink"/>
	<style name="markdown:link-text"          foreground="hyperlink"/>
	<style name="markdown:url"                foreground="hyperlink"/>

  <style name="markdown:emphasis"           italic="true"/>
  <style name="markdown:strong-emphasis"    bold="true"/>
  <style name="markdownpp:strikethrough"    strikethrough="true"/>
  <style name="markdownpp:highlight"        background="#rgba(0,255,103,0.3)"/>

  <style
    name="markdownpp:marker"
    foreground="#rgba(255,255,255,0.3)"
    strikethrough="false"
    bold="false"
    scale="0.7"/>

  <style
    name="markdownpp:long_marker"
    foreground="#rgba(255,255,255,0.3)"
    strikethrough="false"
    bold="false"
    scale="0.5"/>

  <!-- Heading styles -->
  <style name="markdownpp:h1"               bold="true" scale="3.2"/>
  <style name="markdownpp:h2"               bold="true" scale="2.4"/>
  <style name="markdownpp:h3"               bold="true" scale="1.7"/>
  <style name="markdownpp:h4"               bold="true" scale="1.4"/>
  <style name="markdownpp:h5"               bold="true" scale="1.2"/>
  <style name="markdownpp:h6"               bold="true"/>

  <style name="markdownpp:heading-hash"     foreground="#rgba(255,255,255,0.2)" bold="false" scale="0.4"/>
</style-scheme>

